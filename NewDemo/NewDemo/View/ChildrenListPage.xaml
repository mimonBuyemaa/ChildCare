             xmlns:vm="clr-namespace:NewDemo.ViewModel.ChildViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="NewDemo.ChildrenListPage"
             Visual="Material">
    
