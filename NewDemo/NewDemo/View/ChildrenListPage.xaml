    <ContentPage.BindingContext>
        <vm:ChildrenListViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <CollectionView ItemsSource="{Binding RegisterAllChildren}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="profileteacher"
                                   WidthRequest="80"
                                   HeightRequest="80"
                                   Grid.Column="0"/>
                            <StackLayout Orientation="Vertical" Grid.Column="1">
                                <Label Text="{Binding Childname}" TextColor="Black" FontAttributes="Bold" FontSize="16" VerticalOptions="Center"/>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>